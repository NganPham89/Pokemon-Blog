<div>
    <h3>Edit Your Post:</h3>
    <form class="form new-blog-form">
        <div class="form-group">
            <label for="blog-title">Blog Title:</label>
            <input class="form-input" type="text" id="blog-title" name="blog-title" placeholder="{{title}}"/>
        </div>
        <div class="form-group">
            <label for="blog-content">Content:</label>
            <textarea class="form-input" id="blog-content" name="blog-content" placeholder="{{content}}"></textarea>
        </div>
        <div class="form-group blog-delete-button">
            <button class="btn btn-primary" data-edit-id="{{id}}">Submit Edit</button>
        </div>
    </form>
</div>

<script src="/js/editblog.js"></script>