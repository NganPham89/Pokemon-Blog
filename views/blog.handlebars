<div class="blog-item">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>
    {{#if logged_in}}
    <div class="blog-button-list">
        <button onclick="location.href='/blog-edit/{{id}}'" type="button">Edit</button>
        <button data-delete-id="{{id}}">Delete</button>
        <button>Comment</button>
    </div>
    {{/if}}
</div>

{{#each comments as |comment|}}
<div>
    <p>{{comment.content}}</p>
    <p>Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    <button>Edit</button>
    <button>Delete</button>
</div>
{{/each}}

<script src="/js/deleteblog.js"></script>