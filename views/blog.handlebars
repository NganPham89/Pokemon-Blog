<section class="m-2 mt-5">
    <div class="blog-item">
        <div class="card m-2 bg-pastel">
            <h2 class="p-2">{{title}}</h2>
            <p class="p-5">{{content}}</p>
            <p class="p-3 small-font">Posted by {{user.name}} on {{format_date date_created}}</p>
        </div>
        {{#if logged_in}}
        <div class="blog-button-list m-2">
            <button class="btn btn-danger" onclick="location.href='/blog-edit/{{id}}'" type="button">Edit</button>
            <button class="btn btn-danger" data-delete-id="{{id}}">Delete</button>
        </div>
        {{/if}}
        <div class="submit-comment m-5 w-25">
            <form class="form new-comment-form">
                <div class="form-group">
                    <label for="comment-content">
                        <h3>Share Your Thoughts:</h3>
                    </label>
                    <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
                </div>
                <div class="form-group">
                    {{#if logged_in}}
                    <button class="btn btn-primary comment-btn" data-blog-id="{{id}}">Post</button>
                    {{else}}
                    <a href="/login">Login or Signup</a> to post and/or edit comments
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
    <div class="card"></div>
    <div class="comment-list mt-5">
        <h3>Comments:</h3>
        {{#each comments as |comment|}}
        <div class="m-2 card"></div>
        <div class="p-3">
            <p>{{comment.content}}</p>
            <p class="small-font">Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
            {{#if ../logged_in}}
            <button onclick="window.location.href='/comment-edit/{{comment.id}}'">Edit</button>
            <button data-comment-id="{{comment.id}}">Delete</button>
            {{/if}}
        </div>
        <div class="m-2 card"></div>
        {{/each}}
    </div>

</section>
<script src="/js/deleteblog.js"></script>
<script src="/js/delete-add-comment.js"></script>