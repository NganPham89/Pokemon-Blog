<h2 class="m-5">Welcome, {{user.name}}!</h2>

<h3 class="ml-5">Your Previous Posts:</h3>

<div class="card m-5 bg-pastel">
    <div class="p-5">
        {{#each blogs as |blog|}}
        <h2 class="mb-3">
            <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h2>
        <p class="small-font">Posted on {{format_date blog.date_created}}</p>
        <div class="card w-50"></div>
        {{/each}}
    </div>
</div>

<div class="m-5">
    <div class="p-5">
        <h3>Create a New Post:</h3>
        <form class="form new-blog-form w-25">
            <div class="form-group">
                <label for="blog-title">Title of Blog Post:</label>
                <input class="form-input w-50" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                <label for="blog-content">Content:</label>
                <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>

    </div>
</div>

<script src="./js/addblog.js"></script>